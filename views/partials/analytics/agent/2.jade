.analytics.hide.partial
  nav(class="container-fluid")
    .container-fluid
      .navbar-header
        .collapse.navbar-collapse
         br
         br

         .form-group
          .col-lg-12
           .col-lg-5
            label(class="control-label") Agent Id
           .col-lg-7
            input(class="form-control" ng-model="agentId" type="text")

         br
         br
         
         .form-group
          .col-lg-12
           .col-lg-5
           .col-lg-7
            button(ng-click="getTop10PlayerDropForParticularAgent()" class="btn btn-primary") Click
         br
         br
         label(class="control-label") {{message}}
         table(class="table table-bordered")
          thead
           tr
            td Agent
            td Player
            td Drop Amount
           tbody
            tr(ng-repeat="drop in drops")
