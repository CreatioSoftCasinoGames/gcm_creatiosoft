

// Analy Req: 2
// Get Drop made by admin from particular agent

.agentDrop.hide.partial
  nav(class="container-fluid")
    .container-fluid
      .navbar-header
        .collapse.navbar-collapse
         br
         h3 Admin Drop From Agent
         br
         br
         .form-group
          .col-lg-12
           .col-lg-5
            label(class="control-label") Agent Id
           .col-lg-7
            input(class="form-control" ng-model="adminDropAgentData.agentId" type="text")

         br
         br
         .form-group
          .col-lg-12
           .col-lg-5
            label(class="control-label") Start Date
           .col-lg-7
            input(class="form-control" ng-model="adminDropAgentData.startDate" type="text" placeholder="MM/DD/YYYY")
         br
         br
         .form-group
          .col-lg-12
           .col-lg-5
            label(class="control-label") Select Range
           .col-lg-7
            select(ng-model="adminDropAgentData.criteria" class="col-lg-12 btn btn-default dropdown-toggle") 
             option(value='daily') Daily 
             option(value='weekly') Weekly
             option(value='monthly') Monthly
         br
         br
         .form-group
          .col-lg-12
           .col-lg-5
           .col-lg-7
            button(ng-click="dropBetweenRangeOfAdminFromAgent()" class="btn btn-primary") Submit
         br
         br
         label(class="control-label") {{message}}
         table(class="table table-bordered")
          thead
           tr
            td Fund Receiver
            td Fund Initiator
            td Drop Amount
           tbody
            tr(ng-repeat="drop in adminDropsByAgent")
             td {{drop.fundReceiver}}
             td {{drop.fundInitiator}}
             td {{drop.money}}