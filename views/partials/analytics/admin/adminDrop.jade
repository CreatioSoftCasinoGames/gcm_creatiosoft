// Analy Req: 1
// Get Drop made by particular Top management(Admin), Top State, Top District, Agents

.adminDrop.hide.partial
  nav(class="container-fluid")
    .container-fluid
      .navbar-header
        .collapse.navbar-collapse
         br
         h3 Admin Drop
         br

         .form-group
          .col-lg-12
           .col-lg-5
            label(class="control-label") Admin Id
           .col-lg-7
            input(class="form-control" ng-model="data.adminId" type="text")

         br
         br
         .form-group
          .col-lg-12
           .col-lg-5
            label(class="control-label") Start Date
           .col-lg-7
            input(class="form-control" ng-model="data.startDate" type="text" placeholder="MM/DD/YYYY")
         br
         br
         .form-group
          .col-lg-12
           .col-lg-5
            label(class="control-label") Select Range
           .col-lg-7
            select(ng-model="data.criteria" class="col-lg-12 btn btn-default dropdown-toggle") 
             option(value='daily') Daily 
             option(value='weekly') Weekly
             option(value='monthly') Monthly
         br
         br
         .form-group
          .col-lg-12
           .col-lg-5
           .col-lg-7
            button(ng-click="dropBetweenRangeOfAdmin()" class="btn btn-primary") Submit
         br
         br
         label(class="control-label") {{message}}
         table(class="table table-bordered")
          thead
           tr
            td Id
            td Drop Amount
           tbody
            tr(ng-repeat="drop in adminDrops")
             td {{drop.fundReceiver}}
             td {{drop.money}}